<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:background="@drawable/round_corners">

    <ListView
        android:id="@+id/allcomment_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_above="@+id/rL_comm"
        />

    <RelativeLayout
        android:id="@+id/rL_comm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Spinner
            android:id="@+id/debate_spinner"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/signupbackground_white"
            android:dropDownSelector="#FFFFFF"
            android:gravity="center"
            android:layoutMode="clipBounds"
            android:spinnerMode="dropdown"
            android:textColor="#000000"
            android:textSize="15sp"
            android:transitionGroup="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:entries="@array/debate"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textMultiLine"
            android:id="@+id/editText5"
            android:hint="Add a comment"
            android:paddingLeft="10dp"
            android:textCursorDrawable="@null"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="#ffffff"
            android:layout_below="@+id/debate_spinner"
            />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton"
            android:layout_alignTop="@+id/editText5"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/comment_arrow"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#90909090"
            android:layout_above="@+id/editText5"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</RelativeLayout>
